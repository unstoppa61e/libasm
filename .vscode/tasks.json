    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "c_build",
            "command": "nasm",
            "args": [
				"-fmacho64",
                "${file}",
				"ld",
				"${file}.o",
				"-lSystem",
				"${fileDirname}/a.out",
            ],
            "group": "build"
        }
    ]
}